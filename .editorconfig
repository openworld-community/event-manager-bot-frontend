# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_size = 4

# Tab indentation
[Makefile]
indent_style = tab

# Turn off for markdown files
[*.md]
insert_final_newline = false
